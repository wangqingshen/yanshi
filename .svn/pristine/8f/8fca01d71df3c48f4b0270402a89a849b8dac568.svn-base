<admintpl file="header" />
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li><a href="{:U('Goods/goods_list')}">商品列表</a></li>
			<li class="active"><a href="#">查看商品</a></li>
		</ul>
		<div>
			<form id="goods_form" class="form-horizontal" method="post" action="{:U('Goods/add_goods_post')}">
				<fieldset>
					<div class="control-group">
						<label class="control-label">商品名称:</label>
						<div class="controls">
							{$spu_info.goods_name}
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">商品分类:</label>
						<div class="controls">
							{$spu_info.goods_class}
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">送餐说明:</label>
						<div class="controls">
							{$spu_info.delivery_explain}
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">商品主图:</label>
						<br />
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<img src="{$spu_info.goods_img1}" id="thumb-preview" width="135" style="cursor: hand;width: 120px;height: 120px" />
									</td>
								</tr>
							</table>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">商品轮播图片:</label>
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<div style="text-align: center;">
											<img src="{$spu_info['goods_slide_img'][0]}" id="thumb-slide-1-preview" style="cursor: hand;width: 120px;height: 120px" />
										</div>
									</td>
								</tr>
							</table>

						</div>
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<div style="text-align: center;">
											<img src="{$spu_info['goods_slide_img'][1]}" id="thumb-slide-2-preview" style="cursor: hand;width: 120px;height: 120px" />
										</div>
									</td>
								</tr>
							</table>
						</div>
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<div style="text-align: center;">
											<img src="{$spu_info['goods_slide_img'][2]}" id="thumb-slide-3-preview" style="cursor: hand;width: 120px;height: 120px" />
										</div>
									</td>
								</tr>
							</table>
						</div>
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<div style="text-align: center;">
											<img src="{$spu_info['goods_slide_img'][3]}" id="thumb-slide-4-preview" style="cursor: hand;width: 120px;height: 120px" />
										</div>
									</td>
								</tr>
							</table>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">商品详情图片:</label>
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<div style="text-align: center;">
											<img src="{$spu_info['goods_spu_img'][0]}" id="thumb-1-preview" style="cursor: hand;width: 120px;height: 120px" />
										</div>
									</td>
								</tr>
							</table>

						</div>
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<div style="text-align: center;">
											<img src="{$spu_info['goods_spu_img'][1]}" id="thumb-2-preview" style="cursor: hand;width: 120px;height: 120px" />
										</div>
									</td>
								</tr>
							</table>
						</div>
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<div style="text-align: center;">
											<img src="{$spu_info['goods_spu_img'][2]}" id="thumb-3-preview" style="cursor: hand;width: 120px;height: 120px" />
										</div>
									</td>
								</tr>
							</table>
						</div>
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<div style="text-align: center;">
											<img src="{$spu_info['goods_spu_img'][3]}" id="thumb-4-preview" style="cursor: hand;width: 120px;height: 120px" />
										</div>
									</td>
								</tr>
							</table>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">分类推荐:
						<div class="controls">
							<if condition="$spu_info.recommend eq 1">
								否
								<else />
								是
							</if>
						</div>
					</div>
					<div class="control-group" id="div_goods_class">
						<label class="control-label">商品分类推荐图:</label>
						<br />
						<div class="span2">
							<table class="table table-bordered">
								<tr>
									<td>
										<div style="text-align: center;">
											<img src="{$spu_info['recommend_img']}" id="thumb-5-preview" width="135" style="cursor: hand;width: 120px;height: 120px" />
										</div>
									</td>
								</tr>
							</table>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">商品送餐时间:</label>
						<div class="controls">
							<span>{$spu_info['delivery_time'][0]}|{$spu_info['delivery_time'][0]}</span>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">商品规格:</label>
						<div class="controls">
							<table class="table table-bordered">
								<tr>
									<td style="width: 20px;">份量</td>
									<volist name="spu_info['spu_spec']['portion']" id="vo">
									<td style="width: 80px;color: black;text-align: center;font-size: 14px;">
										<label>{$vo}</label>
									</td>
									</volist>
								</tr>
								<tr>
									<td style="width: 20px;">周期</td>
									<volist name="spu_info['spu_spec']['cycle']" id="vo">
										<td style="width: 80px;color: black;text-align: center;font-size: 14px;" class="sp_name">
											<label>{$vo}</label>
										</td>
									</volist>
								</tr>
							</table>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">sku商品信息:</label>
						<div class="controls">
							<table class="table table-hover table-bordered">
								<thead>
								<tr>
									<th>SKU名称</th>
									<th>商品单价</th>
									<th>二人拼团价</th>
									<th>四人拼团价</th>
									<th>送餐次数</th>
								</tr>
								</thead>
								<tbody id="sku_table">
									<volist name="sku_list" id="list">
										<tr>
											<td>{$list.spec}</td>
											<td>{$list.sku_price}</td>
											<td>{$list.sku_2_price}</td>
											<td>{$list.sku_4_price}</td>
											<td>{$list.delivery_num}</td>
										</tr>
									</volist>

								</tbody>
							</table>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"><span style="color: red">*</span>发布状态:</label>
						<div class="controls">
							<if condition="$spu_info.state eq 1">
								上架
								<else />
								下架
							</if>
						</div>
					</div>
				</fieldset>


			</form>
		</div>
	</div>

</body>
</html>